# =================================
# Ultra High-Performance Telegram Video Downloader Bot
# Environment Configuration File
# =================================

# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_from_botfather
API_ID=your_api_id_from_my_telegram_org
API_HASH=your_api_hash_from_my_telegram_org

# Telethon Session Configuration
SESSION_STRING=your_telethon_session_string
PHONE_NUMBER=+1234567890

# Group/Chat Configuration (comma-separated IDs)
ALLOWED_CHAT_IDS=-1001234567890,-1001234567891
UPLOAD_CHAT_ID=-1001234567892
ADMIN_USER_IDS=123456789,987654321

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/video_bot
REDIS_URL=redis://localhost:6379/0

# Performance Settings
MAX_CONCURRENT_DOWNLOADS=5
MAX_CONCURRENT_UPLOADS=3
CHUNK_SIZE=262144
MAX_FILE_SIZE=2147483648

# File Management
TEMP_DIR=./temp
MAX_TEMP_AGE=3600
AUTO_CLEANUP=true

# Speed Optimization
USE_FAST_TELETHON=true
BANDWIDTH_LIMIT=25000000
CONNECTION_RETRIES=5
REQUEST_TIMEOUT=300

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_RATE_LIMITING=true
ENABLE_USER_STATISTICS=true

# Security Settings
MAX_USERS_PER_MINUTE=100
MAX_DOWNLOADS_PER_USER=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/bot.log

# YT-DLP Configuration
YTDL_FORMAT=best