# ========================================
# إعدادات بوت تحميل يوتيوب وتلجرام الضخم
# ========================================

# ========================================
# إعدادات تلجرام
# ========================================

# احصل على هذه القيم من https://my.telegram.org
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# احصل على هذا من @BotFather
BOT_TOKEN=your_bot_token_here

# اسم الجلسة (اختياري)
SESSION_NAME=userbot

# الحد الأقصى لحجم الملف بالجيجابايت
MAX_FILE_SIZE_GB=2.0

# ========================================
# إعدادات قاعدة البيانات
# ========================================

# رابط قاعدة البيانات PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/youtube_bot

# رابط Redis
REDIS_URL=redis://localhost:6379

# رابط MongoDB (اختياري)
MONGODB_URL=mongodb://localhost:27017/youtube_bot

# ========================================
# إعدادات التطبيق
# ========================================

# بيئة التشغيل (development, production, testing)
ENVIRONMENT=development

# مستوى التسجيل (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# مجلد التحميل
DOWNLOAD_DIR=downloads

# مجلد الملفات المؤقتة
TEMP_DIR=temp

# مجلد السجلات
LOG_DIR=logs

# مجلد التخزين المؤقت
CACHE_DIR=cache

# ========================================
# إعدادات الويب
# ========================================

# عنوان الخادم
WEB_HOST=0.0.0.0

# منفذ الخادم
WEB_PORT=8000

# وضع التطوير
WEB_DEBUG=false

# المفتاح السري
SECRET_KEY=your-secret-key-here

# ========================================
# إعدادات الأمان
# ========================================

# مفتاح التشفير
ENCRYPTION_KEY=your-encryption-key-here

# مفتاح JWT
JWT_SECRET=your-jwt-secret-here

# عدد جولات bcrypt
BCRYPT_ROUNDS=12

# مهلة الجلسة بالثواني
SESSION_TIMEOUT=3600

# الحد الأقصى لمحاولات تسجيل الدخول
MAX_LOGIN_ATTEMPTS=5

# ========================================
# إعدادات التحميل
# ========================================

# الحد الأقصى للتحميلات المتزامنة
MAX_CONCURRENT_DOWNLOADS=5

# حجم القطعة بالبايت
CHUNK_SIZE=1048576

# عدد محاولات إعادة المحاولة
RETRY_ATTEMPTS=3

# مهلة التحميل بالثواني
DOWNLOAD_TIMEOUT=300

# User Agent
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# ========================================
# إعدادات الرفع
# ========================================

# الحد الأقصى للرفع المتزامن
MAX_CONCURRENT_UPLOADS=3

# حجم قطعة الرفع بالبايت
UPLOAD_CHUNK_SIZE=524288

# عدد محاولات إعادة الرفع
UPLOAD_RETRY_ATTEMPTS=5

# مهلة الرفع بالثواني
UPLOAD_TIMEOUT=600

# تفعيل الضغط
COMPRESSION_ENABLED=true

# تفعيل التشفير
ENCRYPTION_ENABLED=true

# ========================================
# إعدادات قاعدة البيانات
# ========================================

# حجم pool الاتصالات
DB_POOL_SIZE=20

# الحد الأقصى للاتصالات الإضافية
DB_MAX_OVERFLOW=30

# مهلة pool الاتصالات
DB_POOL_TIMEOUT=30

# إعادة تدوير الاتصالات
DB_POOL_RECYCLE=3600

# ========================================
# إعدادات Redis
# ========================================

# الحد الأقصى للاتصالات
REDIS_MAX_CONNECTIONS=50

# مهلة المقبس
REDIS_SOCKET_TIMEOUT=5

# فك تشفير الاستجابات
REDIS_DECODE_RESPONSES=true

# ========================================
# إعدادات المراقبة
# ========================================

# تفعيل Prometheus
PROMETHEUS_ENABLED=true

# منفذ Prometheus
PROMETHEUS_PORT=9090

# تفعيل Grafana
GRAFANA_ENABLED=true

# منفذ Grafana
GRAFANA_PORT=3000

# ========================================
# إعدادات الإشعارات
# ========================================

# تفعيل إشعارات Discord
DISCORD_WEBHOOK_URL=

# تفعيل إشعارات Slack
SLACK_WEBHOOK_URL=

# تفعيل إشعارات Telegram
TELEGRAM_NOTIFICATION_CHAT_ID=

# ========================================
# إعدادات التطوير
# ========================================

# تفعيل وضع التطوير
DEBUG=false

# تفعيل CORS
CORS_ENABLED=true

# أصول CORS
CORS_ORIGINS=["*"]

# حد معدل الطلبات
RATE_LIMIT=100

# ========================================
# إعدادات النسخ الاحتياطي
# ========================================

# تفعيل النسخ الاحتياطي التلقائي
AUTO_BACKUP=true

# مجلد النسخ الاحتياطي
BACKUP_DIR=backups

# تكرار النسخ الاحتياطي (بالساعات)
BACKUP_INTERVAL=24

# الاحتفاظ بالنسخ الاحتياطية (بالأيام)
BACKUP_RETENTION_DAYS=7

# ========================================
# إعدادات التنظيف
# ========================================

# تفعيل التنظيف التلقائي
AUTO_CLEANUP=true

# تنظيف الملفات المؤقتة (بالساعات)
TEMP_CLEANUP_INTERVAL=24

# تنظيف السجلات القديمة (بالأيام)
LOG_CLEANUP_DAYS=30

# تنظيف البيانات القديمة (بالأيام)
DATA_CLEANUP_DAYS=90